%prep
%setup -n fptools

%build
autoheader
autoconf
./configure --prefix=/usr --enable-hc-boot
make ProjectsToBuild="glafp-utils happy" WithHappyHc=ghc boot
make ProjectsToBuild="glafp-utils happy" WithHappyHc=ghc all
make -C happy/doc happy.dvi happy.html
rm -rf happy/examples/CVS

%install
make ProjectsToInstall=happy install

